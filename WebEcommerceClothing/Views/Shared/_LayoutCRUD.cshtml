@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/assets/asset/style.css">
	<title>Shop Employee</title>
</head>
<body>
	<!-- Sidebar -->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-store'></i>
			<span class="text">CRUD Seller</span>
		</a>
		<ul class="side-menu top">
			<li >
				<a href="~/Admin/TemplateAdmin">
					<i class='bx bxs-dashboard'></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="~/Categories/Index">
					<i class='bx bxs-shopping-bag-alt'></i>
					<span class="text">Categories</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-bar-chart-square'></i>
					<span class="text">Products</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-chat'></i>
					<span class="text">Message</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="#">
					<i class='bx bxs-cog'></i>
					<span class="text">Setting</span>
				</a>
			</li>
			<li>
				<a href="#" class="logout">
					<i class='bx bxs-log-out-circle'></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- Sidebar -->
	<!-- Content -->
	<section id="content">
		<nav>
			<i class='bx bx-menu'></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="">
				<div class="form-input">
					<input type="search" placeholder="Search....">
					<button type="submit" class="btn-search"><i class='bx bx-search'></i></button>
				</div>
			</form>
			<a href="#" class="notification">
				<i class='bx bxs-bell'></i>
				<span class="num">8</span>
			</a>
			<a href="#"> 
				@if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
				{
					@Html.Raw(HttpContextAccessor.HttpContext.Session.GetString("UserName"))
				}
			</a>
			<a href="#" class="profile">
				<img src="~/assets/asset//img/people.png" alt="">
			</a>
		</nav>
		@RenderBody()
		<!-- MAIN -->
	</section>
	<!-- Content -->
	<script src="~/assets/asset/scripts.js"></script>
</body>
</html>
@RenderSection("Scripts", required: false)