@model List<WebEcommerceClothing.Models.CategoryModel>

@{
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}
<style>
    .custom-thead {
        background-color: #343a40;
        color: white;
    }
</style>
<div class="m-4">
<h1>Categories</h1>

    <table class="table table-striped table-bordered">
    <thead class="custom-thead">
        <tr>
            <th class="text-white">Category ID</th>
            <th class ="text-white">Category Name</th>
            <th class ="text-white"> Category Description</th>
            <th class ="text-white"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryID</td>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDescription</td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@category.CategoryID">Details</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@category.CategoryID">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.CategoryID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-action="Create">Create New Category</a>
</div>