@model WebEcommerceClothing.Models.CategoryModel
@using WebEcommerceClothing.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}
<div class="m-4">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center">Create New Category</h1>
                <hr>
                <form asp-action="Create" asp-controller="Categories" method="post">
                    <div class="form-group">
                        <label asp-for="CategoryName">Category Name</label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryDescription">Category Description</label>
                        <input asp-for="CategoryDescription" class="form-control" />
                        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" value="Create">Create</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
