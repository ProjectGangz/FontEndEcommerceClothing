@model WebEcommerceClothing.Models.CategoryModel
@{
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
    ViewData["Title"] = "EditCategory";
}

<div class="m-4 p-5 my-custom-class">
    <div class="custom-out-form">
        <h1 class="text-center text-light">Edit Category</h1>
        <hr />
        <div class="custom-form-container">
            <form class="custom-form" asp-action="Edit" asp-route-id="@Model.CategoryID" method="post">
                <div class="custom-form-group">
                    <label class="form-label" asp-for="CategoryName">Category Name</label>
                    <input class="form-control" asp-for="CategoryName" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="custom-form-group">
                    <label class="form-label" asp-for="CategoryDescription">Category Description</label>
                    <input asp-for="CategoryDescription" class="form-control" />
                    <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                </div>
                <div class="custom-form-group-button text-center">
                    <button type="submit" class="custom-form-submit-btn">Save Changes</button>
                    <a class="custom-form-submit-btn" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>