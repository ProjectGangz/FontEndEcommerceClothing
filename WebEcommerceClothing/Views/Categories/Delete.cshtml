@model WebEcommerceClothing.Models.CategoryModel
@{
    ViewData["Title"] = "DeleteCategory";
}

<h1>Delete</h1>

<h1>Delete Category</h1>

<div>
    <h4>Category ID: @Model.CategoryID</h4>
    <h4>Category Name: @Model.CategoryName</h4>
    <h4>Category Description: @Model.CategoryDescription</h4>
</div>

<form asp-action="Delete" asp-route-id="@Model.CategoryID" method="post">
    <p>Are you sure you want to delete this category?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index">Back to List</a>
</form>